        "license": "dist/bin/license.js"
    },
    "exports": {
        "require": "dist/index.js",
        "types": "dist/index.d.ts"
    },
    "license": "MIT",
    "scripts": {
        "run-script": "ts-node --project config/tsconfig.script.json",
